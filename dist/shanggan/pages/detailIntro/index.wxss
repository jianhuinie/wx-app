/**
 * 公共变量
 */
.hide {
  display: none;
}
.show {
  display: inline-block;
}
.word-break {
  white-space: normal;
  word-break: break-all;
  word-wrap: break-word;
}
.ellipsis {
  display: inline-block;
  zoom: 1;
  overflow: hidden;
  -o-text-overflow: ellipsis;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.txt-right {
  text-align: right;
}
.placeholder {
  color: #8a8a8a;
}
.info-box {
  padding: 30rpx;
}
.info-box .title {
  font-weight: bold;
  font-size: 32rpx;
  margin-bottom: 20rpx;
}
.info-box .content {
  font-size: 24rpx;
  text-indent: 48rpx;
}
.info-box .content .more-info {
  color: #136ec2;
}
.image-box {
  text-align: center;
  margin: 20rpx auto;
}
page {
  height: 100%;
  background-color: #f8f8f8;
}
page .detail-intro {
  border-top: 2rpx solid #dcddde;
}
page .detail-intro .info-item {
  background: #fff;
  position: relative;
  font-size: 30rpx;
  color: #2D2D2E;
  line-height: 30rpx;
  height: 90rpx;
  box-sizing: border-box;
  padding-top: 30rpx;
  padding-left: 30rpx;
  border-bottom: 2rpx solid #f8f8f8;
}
page .detail-intro .info-item .icon-right {
  width: 20px;
  height: 20px;
  position: absolute;
  right: 3%;
  top: 26rpx;
}
page .detail-intro .info-item .status-text {
  font-size: 26rpx;
  color: #9D9D9E;
  line-height: 26rpx;
  position: absolute;
  right: 10%;
  top: 34rpx;
}
page .detail-intro .info-item:last-child {
  border: none;
}
