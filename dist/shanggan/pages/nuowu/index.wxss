/**
 * 公共变量
 */
.hide {
  display: none;
}
.show {
  display: inline-block;
}
.word-break {
  white-space: normal;
  word-break: break-all;
  word-wrap: break-word;
}
.ellipsis {
  display: inline-block;
  zoom: 1;
  overflow: hidden;
  -o-text-overflow: ellipsis;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.txt-right {
  text-align: right;
}
.placeholder {
  color: #8a8a8a;
}
.info-box {
  padding: 30rpx;
}
.info-box .title {
  font-weight: bold;
  font-size: 32rpx;
  margin-bottom: 20rpx;
}
.info-box .content {
  font-size: 24rpx;
  text-indent: 48rpx;
}
.info-box .content .more-info {
  color: #136ec2;
}
.image-box {
  text-align: center;
  margin: 20rpx auto;
}
page {
  background: #f8f8f8;
  height: 100%;
}
page .nuowu-page {
  border-top: 2rpx solid #dcddde;
}
page .nuowu-page swiper {
  height: 600rpx;
}
page .nuowu-page swiper swiper-item {
  box-sizing: border-box;
}
page .nuowu-page swiper swiper-item image {
  background: #fff;
  width: 100%;
  height: 100%;
}
